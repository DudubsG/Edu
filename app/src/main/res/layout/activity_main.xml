<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2E2E2E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/recycler"
            android:background="#F7D358"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout_Busca"
        android:background="#2E2E2E">

        <EditText
            android:id="@+id/pesquisar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:textColorHint="#848484"
            android:textColor="#151515"
            android:drawableLeft="@mipmap/lupa"
            android:background="@drawable/borda_arredondada_pesquisa"
            android:hint="Buscar..."
            android:inputType="textPersonName"
            android:padding="6dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp"
            android:layout_below="@id/recycler"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Resultado nÃ£o encontrado"
            android:textColor="#D8D8D8"
            android:visibility="invisible"
            android:textSize="20dp"
            android:layout_marginTop="180dp"
            android:layout_below="@id/recycler"/>

    </RelativeLayout>

</RelativeLayout>